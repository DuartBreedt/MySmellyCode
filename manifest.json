{
    "name": "MySmellyCode",
    "description": "Detect your own custom set of keywords in Github pull requests",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "webRequest"
    ],
    "host_permissions": [
        "https://github.com/*/diffs?*&bytes=*lines=*&pull_number=*&start_entry=*",
        "https://dev.azure.com/*/_apis/Contribution/HierarchyQuery/project/*"
    ],
    "icons": {
        "16": "/images/ic_icon.png",
        "32": "/images/ic_icon.png",
        "48": "/images/ic_icon.png",
        "128": "/images/ic_icon.png"
    },
    "background": {
        "service_worker": "service-workers/background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "/images/ic_icon.png",
            "32": "/images/ic_icon.png",
            "48": "/images/ic_icon.png",
            "128": "/images/ic_icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.github.com/*/pull/*/files*",
                "file:///D:/Dev/my-smelly-code/test.html"
            ],
            "css": [
                "content-scripts/github-violations.css"
            ],
            "js": [
                "github-constants.js",
                "constants.js",
                "content-scripts/setup.js",
                "content-scripts/step-through.js",
                "content-scripts/render.js"
            ]
        },
        {
            "matches": [
                "https://dev.azure.com/MMTOL/*/pullrequest/*=files"
            ],
            "css": [
                "content-scripts/azure-violations.css"
            ],
            "js": [
                "azure-constants.js",
                "constants.js",
                "content-scripts/setup.js",
                "content-scripts/step-through.js",
                "content-scripts/render.js"
            ]
        }
    ]
}